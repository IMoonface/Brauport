<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.BrauportV2" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/appBars_color</item>
        <item name="colorPrimaryVariant">@color/appBars_color</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/appBars_color</item>
        <item name="android:textColorPrimary">@color/card_color</item>
        <item name="android:textColorSecondary">@color/card_color</item>
        <item name="actionMenuTextColor">@color/card_color</item>
    </style>

    <style name="Theme.BrauportV2.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActivityStartTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/ic_brauport_day</item>
    </style>

    <style name="ButtomNavTheme" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:background">@color/appBars_color</item>
        <item name="itemIconTint">@color/card_color</item>
        <item name="itemTextColor">@color/card_color</item>
    </style>

    <style name="CardViewTheme" parent="CardView">
        <item name="cardBackgroundColor">@color/card_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="cardCornerRadius">20dp</item>
    </style>

    <style name="ButtonTheme" parent="ThemeOverlay.Material3.Button">
        <item name="android:textColor">@color/appBars_color</item>
        <item name="backgroundTint">@color/button_color</item>
        <item name="android:textSize">15sp</item>
        <item name="iconTint">@color/appBars_color</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="EditTextTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/appBars_color</item>
        <item name="android:textColorHint">#78909C</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="IconButtonTheme" parent="ThemeOverlay.Material3.Button">
        <item name="android:textColor">@color/appBars_color</item>
        <item name="backgroundTint">@color/button_color</item>
        <item name="cornerRadius">20dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@color/appBars_color</item>
    </style>

    <style name="InstructionTheme">
        <item name="android:background">@color/card_color</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="TextInputTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="TextViewTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/appBars_color</item>
    </style>

    <style name="CheckedTextViewTheme" parent="Widget.Material3.CheckedTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/listPreferredItemHeight</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.DropDownItem</item>
        <item name="android:textColor">@color/appBars_color</item>
    </style>

</resources>