<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home_fragment">

    <fragment
        android:id="@+id/home_fragment"
        android:name="com.example.brauportv2.ui.HomeFragment"
        android:label="Brauport - HauptmenÃ¼"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_recipe_fragment"
            app:destination="@id/recipe_fragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_homeFragment_to_stock_fragment"
            app:destination="@id/malts_stock_fragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_homeFragment_to_brew_fragment"
            app:destination="@id/brew_fragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/malts_stock_fragment"
        android:name="com.example.brauportv2.ui.MaltStockFragment"
        android:label="Brauport - Bestand"
        tools:layout="@layout/fragment_malt_stock" />
    <fragment
        android:id="@+id/brew_fragment"
        android:name="com.example.brauportv2.ui.BrewFragment"
        android:label="Brauport - Brauen"
        tools:layout="@layout/fragment_brew" />
    <fragment
        android:id="@+id/recipe_fragment"
        android:name="com.example.brauportv2.ui.RecipeFragment"
        android:label="Brauport - Rezept"
        tools:layout="@layout/fragment_recipe">
        <action
            android:id="@+id/action_recipeFragment_to_recipeDetailsFragment"
            app:destination="@id/recipe_details_fragment" />
    </fragment>
    <fragment
        android:id="@+id/recipe_details_fragment"
        android:name="com.example.brauportv2.ui.details.RecipeDetailsFragment"
        android:label="Brauport - Rezeptdetails"
        tools:layout="@layout/fragment_recipe_details" />
</navigation>