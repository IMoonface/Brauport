<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/appBars_color"
    tools:context=".ui.dialog.DialogRestFragment">


    <TextView
        android:id="@+id/cooking_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/end_of_fermentation"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/cooking_date"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:hint="@string/date_dummy"
        android:importantForAutofill="no"
        android:inputType="date"
        android:maxLength="10"
        android:textColor="@color/appBars_color"
        android:textColorHint="#78909C"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cooking_title">

    </EditText>

    <Button
        android:id="@+id/cooking_confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:text="@string/confirm"
        android:textColor="@color/appBars_color"
        android:textSize="15sp"
        app:backgroundTint="@color/button_color"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cooking_date"
        tools:ignore="SmallSp" />

    <Button
        android:id="@+id/cooking_abort_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:text="@string/abort"
        android:textColor="@color/appBars_color"
        android:textSize="15sp"
        app:backgroundTint="@color/button_color"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cooking_date" />

</androidx.constraintlayout.widget.ConstraintLayout>