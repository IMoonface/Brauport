<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@drawable/relative_layout_background">

    <EditText
        android:id="@+id/stock_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:importantForAutofill="no"
        android:inputType="text"
        android:maxLength="20"
        android:hint="@string/enter_name_text"
        android:textColor="@color/appBars_color"
        android:textSize="25sp"
        tools:ignore="LabelFor">

    </EditText>

    <EditText
        android:id="@+id/stock_item_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stock_item_name"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="20"
        android:hint="@string/enter_amount_text"
        android:textColor="@color/appBars_color"
        android:textSize="25sp"
        tools:ignore="LabelFor">

    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/stock_item_amount"
        android:layout_toEndOf="@id/stock_item_amount"
        android:layout_marginStart="-22dp"
        android:text="@string/unit_of_measurement_grams"
        android:textColor="@color/white"
        android:textSize="25sp">
    </TextView>

    <Button
        android:id="@+id/stock_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stock_item_amount"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:text="@string/confirm_text"
        app:backgroundTint="@color/button_color"
        android:textColor="@color/appBars_color"
        android:textSize="15sp"
        app:cornerRadius="20dp"
        tools:ignore="SmallSp">
    </Button>

    <Button
        android:id="@+id/abort_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stock_item_amount"
        android:layout_marginStart="30dp"
        android:textSize="15sp"
        android:textColor="@color/appBars_color"
        android:text="@string/abort_text"
        app:backgroundTint="@color/button_color"
        android:layout_marginBottom="10dp"
        app:cornerRadius="20dp"
        tools:ignore="SmallSp">
    </Button>
</RelativeLayout>
