<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="45dp"
    android:background="@color/button_color"
    android:paddingTop="16dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".ui.MaltStockFragment">

        <TextView
            android:id="@+id/yeast_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_centerHorizontal="true"
            android:text="@string/yeast"
            android:textColor="@color/appBars_color"
            android:textSize="20sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/yeast_add_Button"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="5dp"
            android:text="@string/stock_add_item"
            android:textColor="@color/appBars_color"
            app:backgroundTint="@color/card_color"
            app:cornerRadius="20dp"
            app:icon="@drawable/ic_add"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="@color/appBars_color" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/malt_recyclerView"
            android:layout_below="@id/yeast_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp" />

</RelativeLayout>