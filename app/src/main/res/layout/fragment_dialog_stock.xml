<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:background="@color/appBars_color">

    <EditText
        android:id="@+id/stock_item_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:hint="@string/enter_name_text"
        android:importantForAutofill="no"
        android:inputType="text"
        android:maxLength="20"
        android:textColor="@color/appBars_color"
        android:textColorHint="#78909C"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent">

    </EditText>

    <EditText
        android:id="@+id/stock_item_amount"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/stock_item_name"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:hint="@string/enter_amount_text"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="20"
        android:textColor="@color/appBars_color"
        android:textColorHint="#78909C"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/abort_dialog"
        app:layout_constraintStart_toEndOf="@+id/stock_add_button"
        app:layout_constraintTop_toBottomOf="@+id/stock_item_name">

    </EditText>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/stock_item_amount"
        android:layout_marginTop="73dp"
        android:layout_toEndOf="@id/stock_item_amount"
        android:text="@string/unit_of_measurement_grams"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/stock_item_amount"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/stock_add_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@id/stock_item_amount"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="@string/confirm_text"
        android:textColor="@color/appBars_color"
        android:textSize="15sp"
        app:backgroundTint="@color/button_color"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/abort_dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stock_item_amount"
        tools:ignore="SmallSp" />

    <Button
        android:id="@+id/abort_dialog"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@id/stock_item_amount"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="@string/abort_text"
        android:textColor="@color/appBars_color"
        android:textSize="15sp"
        app:backgroundTint="@color/button_color"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/stock_add_button"
        app:layout_constraintTop_toBottomOf="@+id/stock_item_amount" />

</androidx.constraintlayout.widget.ConstraintLayout>
